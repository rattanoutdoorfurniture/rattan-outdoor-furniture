<?php
    $helper = Mage::helper('blog');
    $route = $helper->getRoute();
    $_menu = $this->getHtml('nav-main-item');
    if($_menu):
?>

<nav id="nav-main" class="nav-main">
    <ul id="nav-main-list" class="nav-main-list">
        <li class="nav-main-item last search hide-mobile">
            <?php echo $this->getChildHtml("topSearch"); ?>
        </li>
        <li class="nav-main-item first hide-mobile<?php echo (Mage::app()->getRequest()->getRequestString() == "/") ? ' selected':''; ?>">
            <a href="<?php echo $this->getUrl('/'); ?>" title="<?php echo $this->__("Rattan Outdoor Furniture"); ?>"><?php echo $this->__("Home"); ?></a>
        </li>
        <?php echo $_menu; ?>
        <li class="nav-main-item<?php echo preg_match('/^\/about-us\/?.*$/',Mage::app()->getRequest()->getRequestString())===1 ? ' selected':''; ?>">
            <a href="<?php echo $this->getUrl('about-us') ?>"><?php echo $this->__("About Us"); ?></a>
        </li>
        <?php if($helper->isEnabled()): ?>
        <li class="nav-main-item<?php echo preg_match("/^\\/{$route}\\/?.*$/",Mage::app()->getRequest()->getRequestString())===1 ? ' selected':''; ?>">
            <a href="<?php echo $this->getUrl($route) ?>"> <?php echo $route ?></a>
        </li>
        <?php endif; ?>
        <li id="mobile-search-toggle-wrap" class="nav-main-item no-display show-mobile-inline">
            <a href="#" id="mobile-search-toggle">&nbsp;</a>
        </li>
    </ul>
</nav>

<?php endif ?>
