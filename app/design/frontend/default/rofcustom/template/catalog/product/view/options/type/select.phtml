<?php /* @var $this Mage_Catalog_Block_Product_View_Options_Type_Select */ ?>
<?php $_option = $this->getOption() ?>
<?php $title = $this->escapeHtml($_option->getTitle()) ?>
<section id="product-details-options-<?=$title?>" class="product-details-options-section">
    <?php
        $swatches = $this->getValues();
        $default = current($swatches)['title'];
    ?>
    <input id="product-details-options-<?=$title?>-value" type="hidden" name="<?=$title?>" value="<?php echo $default; ?>" />
    <span id="product-details-options-<?=$title?>-label" class="product-details-options-label">Choose <?php echo ucwords($title) ?>:</span>
        <span id="product-details-options-<?=$title?>-swatches">
            <?php foreach($swatches as $swatch): ?>
                <aside class="product-details-options-<?=$title?>-swatch<?php echo $swatch==$swatches[0] ? ' selected':''; ?>" data-color="<?php echo $swatch['title']; ?>">
                    <div class="product-details-options-<?=$title?>-swatch-color" style="background-color: <?php echo $swatch['sku']; ?>;" onclick="var sel=document.querySelectorAll('.product-details-options-color-swatch.selected');sel.length?sel[0].classList.remove('selected'):'';this.parentElement.classList.add('selected');document.getElementById('product-details-options-color-value').value=this.parentElement.getAttribute('data-color');"></div>
                </aside>
            <?php endforeach; ?>
        </span>
</section>