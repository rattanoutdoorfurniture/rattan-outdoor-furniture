<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>

<?php
    $textFilterLabels = array(
        "relevance" => array(
            "asc"   => $this->__("Most Relevant"),
        /**
         * This does not help, relevance is just the default sorting.
         *
            "desc"  => $this->__("Least Relevant")
         */
        ),
        "position"  => array(
            "asc"   => $this->__("Newest First"),
            "desc"  => $this->__("Oldest First")
        ),
        "name"      => array(
            "asc"   => $this->__("Name A - Z"),
            "desc"  => $this->__("Name Z - A")
        ),
        "price"     => array(
            "asc"   => $this->__("Price Low to High"),
            "desc"  => $this->__("Price High to Low")
        )
    );
    $textFilters     = $this->getAvailableOrders();
    $textFilterNum   = 0;
    $textFilterCount = count($textFilters)*2;
?>

<ul id="text-filters" class="sixteen columns">
    <span id="text-filters-label"><?php echo $this->__("View by:")?></span>
    <?php foreach($textFilters as  $_key=>$_order): ?>
        <?php if(!isset($textFilterLabels[strtolower($_order)])) continue; ?>
        <?php foreach($textFilterLabels[strtolower($_order)] as $_dir=>$textFilterLabel): ?>
        <li class="text-filters-option<?php if($this->isOrderCurrent($_key)): ?> selected<?php endif ?>">
            <a href="<?php echo $this->getOrderUrl($_key, $_dir) ?>" class="text-filters-link" title="<?php echo $textFilterLabel; ?>"><?php echo $textFilterLabel; ?></a>
        </li>
        <?php endforeach; ?>
    <?php endforeach; ?>
</ul>

<?php endif ?>
