<div class="page-title sixteen columns">
    <h1 id="account-heading">
        <?php echo $this->__('Search') ?>
        <?php if ($this->helper('rss/catalog')->getTagFeedUrl()): ?>
            <a href="<?php echo $this->helper('rss/catalog')->getTagFeedUrl() ?>" class="nobr link-rss"><?php echo $this->__('Subscribe to Feed') ?></a>
        <?php endif; ?>
    </h1>
    <?php if($this->getMessagesBlock()): ?>
        <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
        <script type="text/javascript">
            setTimeout(function() {
                jQuery("ul.messages").slideUp("slow");
            }, 5000);
        </script>
    <?php endif; ?>
</div>
<div class="account-box box-search-terms fourteen columns offset-by-one by-margin add-bottom">
    <div class="account-box-border"></div>
    <div class="account-box-inner">
        <div class="box-head">
            <h2><?php echo $this->__("Search Results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()); ?></h2>
        </div>
        <?php if($this->getResultCount()): ?>
            <?php if ($messages = $this->getNoteMessages()):?>
                <p class="note-msg box-blurb">
                    <?php foreach ($messages as $message):?>
                        <?php echo $message?><br />
                    <?php endforeach;?>
                </p>
            <?php endif; ?>
            <?php echo $this->getProductListHtml() ?>
        <?php else: ?>
            <p class="note-msg box-blurb">
                <?php echo ($this->getNoResultText()) ? $this->getNoResultText() : $this->__('Your search returns no results.') ?>
                <?php if ($messages = $this->getNoteMessages()):?>
                    <?php foreach ($messages as $message):?>
                        <br /><?php echo $message?>
                    <?php endforeach;?>
                <?php endif; ?>
            </p>
        <?php endif; ?>
    </div>
    <div class="account-box-border"></div>
</div>
