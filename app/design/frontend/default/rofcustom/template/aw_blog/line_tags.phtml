<h4><?php echo $this->__('Tags'); ?>:</h4>
<ul class="tags">
    <?php
    $tags = explode(',', $this->getPost()->getTags());

    foreach ($tags as $tag): ?>
        <li><a href="<?php echo Mage::getUrl(Mage::helper('blog')->getRoute() . '/tag/' . urlencode(strtolower($tag))) ?>" rel="nofollow"><?php echo $tag ?></a></li>
    <?php endforeach; ?>	
</ul>


