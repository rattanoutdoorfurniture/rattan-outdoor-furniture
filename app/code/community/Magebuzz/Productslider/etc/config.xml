<?xml version="1.0"?>
<config>
    <modules>
        <Magebuzz_Productslider>
            <version>0.1.0</version>
        </Magebuzz_Productslider>
    </modules>
    <frontend>
		<secure_url>
            <productslider>/productslider/</productslider>
        </secure_url>	
        <routers>
            <productslider>
                <use>standard</use>
                <args>
                    <module>Magebuzz_Productslider</module>
                    <frontName>productslider</frontName>
                </args>
            </productslider>
        </routers>
        <layout>
            <updates>
                <productslider>
                    <file>productslider.xml</file>
                </productslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<productslider>
				<use>admin</use>
				<args>
					<module>Magebuzz_Productslider</module>
					<frontName>productslider</frontName>
				</args>
			</productslider>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<productslider>
					<file>productslider.xml</file>
				</productslider>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <productslider>
                <class>Magebuzz_Productslider_Model</class>
                <resourceModel>productslider_mysql4</resourceModel>
            </productslider>
            <productslider_mysql4>
                <class>Magebuzz_Productslider_Model_Mysql4</class>
                <entities>
                    <productslider>
                        <table>productslider</table>
                    </productslider>
                </entities>
            </productslider_mysql4>
        </models>
        <resources>
            <productslider_setup>
                <setup>
                    <module>Magebuzz_Productslider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productslider_setup>
            <productslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productslider_write>
            <productslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productslider_read>
        </resources>
        <blocks>
            <productslider>
                <class>Magebuzz_Productslider_Block</class>
            </productslider>
			<!--Emplement Rewrite Block In Module-->
        <!--<target_module>
                <rewrite>
                    <path_to>Magebuzz_Productslider_Block_Example</path_to>
                </rewrite>
            </target_module>-->			
        </blocks>
        <helpers>
            <productslider>
                <class>Magebuzz_Productslider_Helper</class>
            </productslider>
        </helpers>
		<!--Emplement Events Used In Module-->
	<!--<events>
			<event_name>
				<observers>
					<productslider>
						<type>singleton</type>
						<class>productslider/observer</class>
						<method>methodName</method>
					</productslider>
				</observers>
			</event_name>	
		</events>-->
		<template>
			<email>
				<productslider_general_email_template>
					<label>Title Email</label>
					<file>productslider_example.html</file>
					<type>html</type>
				</productslider_general_email_template>
			</email>
		</template>			
    </global>
	<!--Set Default Value For Setting Options-->
	<default>
		<productslider>
			<slider_setting>
				<width_slider>685</width_slider>
				<height_slider>210</height_slider>
				<type_slider>simple-slider</type_slider>
				<slider_position>only_home</slider_position>
			</slider_setting>
			<product_setting>
				<type_product>random</type_product>
				<category_filter>1</category_filter>
				<num_products>6</num_products>
				<show_description>1</show_description>
			</product_setting>
		</productslider>
	</default>
	<translate>
		<modules>
			<Magebuzz_Productslider>
				<files>
					<default>Magebuzz_Productslider.csv</default>
				</files>
			</Magebuzz_Productslider>
		</modules>
	</translate>	
</config>